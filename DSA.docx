14. GCD/HCF => using Euclidean Algorithm
const hcf = (a, b) => {
    while(a>0&&b>0){
        if(a>b) a = a%b
        if(b>a) b = b%a
    }
    if(a===0) return b
    return a
}
console.log(hcf(20, 40))
const gcd = (a, b) => b === 0 ? a : gcd(b, a % b);
const gcdBest = (a, b) => {
  a = Math.abs(a);
  b = Math.abs(b);
  while (b !== 0) {
    let temp = b;
    b = a % b;
    a = temp;
  }
  return a;
};

