1.  ****
    ****
    ****
    ****
const printPattern = (n) => {
    let str = ''
    for(let i = 0; i < n; i++){
        for(let j = 0; j < n; j++){
            str += '*'
        }
        str += '\n'
    }
    return str
}
console.log(printPattern(4))

