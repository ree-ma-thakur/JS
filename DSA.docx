10. Pallindrome number
var isPalindrome = function(x) {
    if(x<0) return false
    let num = x, reverseNum = 0
    while(num>0){
        let lastDigit = num % 10;
        num = Math.floor(num/10)
        reverseNum = (reverseNum*10) + lastDigit
    }
    return reverseNum === x
};   

