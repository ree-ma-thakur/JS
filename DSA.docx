25. Check if Array Is Sorted and Rotated
const check = (nums) => {
    let drops = 0;
    const n = nums.length;
    for (let i = 0; i < n; i++) {
        if (nums[i] > nums[(i + 1) % n]) {
            drops++;
            if (drops > 1) return false;
        }
    }
    return true;
};
